
@{
    ViewData["Title"] = "Homework1";
}

<div class="text-center">
    <h1 class="display-4">Homework1</h1>
    <table class="table table-bordered" id="employeesTable">
        <thead>
            <tr>
                <th>姓名</th>
                <th>年資</th>
                <th>薪水</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    <script>
        const emp = {
            "employees": [
                { "name": "Tom", "workYears": 3, "salary": 35000 },
                { "name": "Jack", "workYears": 5, "salary": 40000 },
                { "name": "Mary", "workYears": 7, "salary": 45000 }
            ]
        };

        const datas = emp.employees.map(theEmp => {
            const { name, workYears, salary } = theEmp;
            return (
                `<tr>
                              <td>${name}</td>
                              <td>${workYears}</td>
                              <td>${salary}</td>
                              </tr>
                            `
            )
        })
        console.log(datas);
        $("#employeesTable>tbody").append(datas.join(""));
    </script>
}